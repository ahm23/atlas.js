{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "stripInternal": true,

    /* Bundler mode */
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/interfaces",
      "src/interfaces"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
, "src/storage/test-encoding.bak"  ],
  "exclude": [
    "node_modules",
    "tests/**/*.ts"
  ]
}